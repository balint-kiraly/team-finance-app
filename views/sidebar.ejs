<aside>
    <div class="sidebar d-flex align-items-center flex-column">
        <div class="container">
            <h2>Your Account</h2>
            <div>
                <img src="/assets/card.png" alt="card">
            </div>
        </div>
        <div class="container">
            <h2>Other People</h2>
            <div class="container members gap-2">
                <% teamList.forEach(function (member) { %>
                    <div class="floating datarow">
                                <span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
                                    </svg>
                                    <span> <%= member.name %> </span>
                                </span>
                        <!--TODO: member balance-->
                        <span class="balance">$balance</span>
                    </div>
                <% }); %>
                <a class="d-flex justify-content-end align-items-center mt-2" href="/team">
                    <span class="px-2">Edit Team</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</aside>