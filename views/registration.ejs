<%- include('sp_header', {page: 'Registration'}) %>
<%- include('backdrop') %>
<!-- main content -->
<div class="pop-up col-6 col-lg-5 p-4">
    <h2 class="mt-5">Sign Up</h2>
    <form method="post" class="w-50">
        <div class="form-floating mb-3">
            <input class="form-control w-100" type="text" name="name" id="name" placeholder="Enter Name" required>
            <label class="form-label" for="name">Name</label>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control w-100" type="email" name="email" id="email" placeholder="Enter email address"
                   required>
            <label class="form-label" for="email">Email</label>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control w-100" type="password" name="password" id="password" placeholder="Enter password"
                   required>
            <label class="form-label" for="password">Password</label>
        </div>
        <span class="text-danger w-100 text-center" style="display: inline-block; font-size: 14px">
            <%= (typeof error === 'undefined') ? '' : error; %>
        </span>
        <button class="btn btn-primary text-white w-100 mt-5 shadow-sm" type="submit">Register</button>
    </form>
    <div class="text-center mt-3 mb-2">
        <div>Already a member? <a class="link-secondary" href="/login">Login</a></div>
    </div>
</div>
</body>
</html>